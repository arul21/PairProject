<%- include('template/header') %>
<div class="container">
    <div class="row">
        <div class="col-sm-3">
                <% if(user) { %>
                    <%- include('template/user') %>
                    <%- include('template/menu') %>
                  <% } %> 
        </div>
        <% if(err){ %> 
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong> <%= err %> </strong> 
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <% } %> 
        <div class="col-sm-9">
            <h3>Sign Up</h3>
            <form method="POST" action="/user/signup">
                <label> Name :</label>
                <input type="text" name="name" class="form-control mb-3" placeholder="Name">
                <label>Email :</label>
                <input type="text" name="email" class="form-control mb-3" placeholder="Your Email">
                <label>Password :</label>
                <input type="password" name="password" class="form-control mb-3" placeholder="Your Password">
                <input type="submit" class="btn btn-success right" value="Sign Up">
            </form>
        </div>
    </div>
</div>
<%- include('template/footer') %>